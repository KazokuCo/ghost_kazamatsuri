<head>
  {{! Document Settings }}
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width">

  {{! Page Meta }}
  <title>{{meta_title}}</title>
  <meta name="description" content="{{meta_description}}" />

  {{! Favicon }}
  <link rel="shortcut icon" href="/favicon.ico">

  {{! RSS }}
  <link rel="alternate" type="application/rss+xml" title="{{@blog.title}} Â» Feed" href="/rss">

  {{! Styles'n'Scripts }}
  <link href='//fonts.googleapis.com/css?family=Open+Sans:400,300,600,700,800&amp;subset=latin,latin-ext' rel='stylesheet' type='text/css'>
  <link href='//fonts.googleapis.com/css?family=Oswald:400,300,700&amp;subset=latin,latin-ext' rel='stylesheet' type='text/css'>
  <link rel="stylesheet" href="{{asset "css/normalize.css"}}">
  <link rel="stylesheet" href="{{asset "css/grid.css"}}">
  <link rel="stylesheet" href="{{asset "css/font-awesome.min.css"}}">
  <link rel="stylesheet" href="{{asset "css/style.css"}}">
  <link rel="stylesheet" href="{{asset "css/slicknav.css"}}">

  <script src="{{asset "js/vendor/custom.modernizr.js"}}"></script>

  <script>
    (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
      (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
      m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
    })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

    ga('create', 'UA-48122982-1', 'auto');
    ga('send', 'pageview');
  </script>

  {{ghost_head}}
</head>

<body class="{{body_class}}">
  <div id="preload" style="display:none;">
    <img src="/assets/images/chibimoth_loading.gif" />
  </div>

  {{! Header }}
  {{#is "tag"}}
  <div class="header" {{#if tag.image}} style="background-image: url({{tag.image}})" {{else}} {{#if @blog.cover}} style="background-image: url({{@blog.cover}})"{{else}} {{/if}}{{/if}}>
    {{else}}
    <div class="header" {{#if @blog.cover}} style="background-image: url({{@blog.cover}})"{{/if}}>
      {{/is}}
      {{! Top Bar }}
      <div class="topbar">
        <div class="row multicol collapse">
          <div class="small-12 columns">
            <div class="social">
              <ul>
                <li><a href="/twitter" title="Twitter"><i class="fa fa-twitter"></i></a></li>
                <li><a href="/facebook" title="Facebook"><i class="fa fa-facebook"></i></a></li>
                <li><a href="/discord" title="Discord"><img src="/assets/images/discord-white.svg" class="extra-icon blur" /><img src="/assets/images/discord-blue.svg" class="extra-icon hover" /></a></li>
                <li>
                  <a href="/patreon" title="Patreon">
                    <svg class="extra-icon" viewBox="0 0 16 16" xmlns="http://www.w3.org/2000/svg" fill-rule="evenodd" clip-rule="evenodd" stroke-linejoin="round" stroke-miterlimit="1.414"><path d="M0 7.78C0 4.053 3.027.56 7.018.06c2.86-.333 5.023.765 6.52 2.196 1.396 1.33 2.228 3.028 2.428 5.025.166 1.997-.266 3.728-1.43 5.36-1.164 1.596-3.46 3.36-6.32 3.36H4.324V8.313c.034-1.697.6-3.162 2.66-3.86 1.797-.533 3.893.465 4.525 2.362.664 2.03-.3 3.395-1.43 4.227-1.132.832-2.895.832-4.06.033v2.63c.766.365 1.73.465 2.43.43 2.526-.365 4.49-1.796 5.32-3.96.866-2.295.267-4.957-1.53-6.62-2.16-1.765-4.523-2.197-7.05-.966-1.763.898-2.994 2.728-3.294 4.724V16H.033L0 7.78z" fill-rule="nonzero"/></svg>
                  </a>
                </li>
                <li><a href="/rss" title="RSS"><i class="fa fa-rss"></i></a></li>
              </ul>
            </div>
          </div>
        </div>
      </div>


      <div class="row">
        <div class="small-12 columns">
          {{#if @blog.logo}}
          <div class="logo"><a href="{{@blog.url}}"><img src="{{@blog.logo}}" alt="{{@blog.title}}"/></a></div>
          {{else}}
          <div class="logotxt"><h1><a href="{{@blog.url}}">{{@blog.title}}</a></h1></div>
          {{/if}}
          {{#if @blog.description}}
          <div class="text-center motto">{{@blog.description}}</div>
          {{/if}}
        </div>
      </div>

    </div>

    {{! Navigation Menu }}
    {{navigation}}

    {{{body}}}

    <footer>
     <div class="copyright">
      <div class="row">
        <div class="small-12 columns">
          <p class="text-center">Copyright 2015 Kazamatsuri.  All Rights Reserved.</p>
        </div>
      </div>
    </div>
  </footer>
  <a href="#top" id="back-to-top"><img src="{{asset "images/icons/backtop.png"}}" alt="Back to top"></a>

  {{ghost_foot}}

  {{! The JavaScript files }}
  {{! jQuery }}
  <script type="text/javascript" src="https://code.jquery.com/jquery-1.11.3.min.js"></script>
  {{! Superfish Menu }}
  <script type="text/javascript" src="{{asset "/js/vendor/hoverIntent.min.js"}}"></script>
  <script type="text/javascript" src="{{asset "/js/vendor/superfish.js"}}"></script>
  {{! Menu for Small Screens }}
  <script type="text/javascript" src="{{asset "/js/vendor/jquery.slicknav.min.js"}}"></script>
  {{! Social Likes }}
  <script type="text/javascript" src="{{asset "/js/vendor/social-likes.min.js"}}"></script>
  {{! Isotope }}
  <script type="text/javascript" src="{{asset "/js/vendor/isotope.pkgd.js"}}"></script>
  <script type="text/javascript" src="{{asset "/js/vendor/imagesloaded.pkgd.min.js"}}"></script>
  {{! Conditionizr}}
  <script type="text/javascript" src="{{asset "/js/vendor/conditionizr.min.js"}}"></script>
  <script type="text/javascript" src="{{asset "/js/vendor/safari.js"}}"></script>
  <script type="text/javascript" src="{{asset "/js/vendor/windows.js"}}"></script>
  {{! InfiniteScroll }}
  <script type="text/javascript" src="{{asset "/js/vendor/jquery.infinitescroll.min.js"}}"></script>
  <script type="text/javascript" src="{{asset "/js/vendor/manual-trigger.js"}}"></script>
  {{! Scripts Hooks }}
  <script type="text/javascript" src="{{asset "/js/custom-infscroll-auto.js"}}"></script>
</body>
</html>
